<%= render "shared/header" %>
<div class="contents">
    <%= @review.review_title %>
    <%= image_tag @review.image, class: "review-img" if @review.image.attached? %>
    <%= @review.commic_title %>
    <%= @review.text %>
</div>

<div class="edit">
    <% if @review.user != current_user %>
        <li><%= link_to '編集する', edit_review_path, class: "login-menu" %></li>
        <li><%= link_to '削除する', review_path, method: :delete, class: "login-menu" %></li>
    <% end %>
</div>

<%= render "shared/footer" %>
